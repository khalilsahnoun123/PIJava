<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:controller="com.example.demo.controllers.controllers_TP.AccueilController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: #F5F5F5; -fx-padding: 30;">

    <children>

        <!-- Header -->
        <Label fx:id="welcomeLabel" text="Bienvenue au Système de Gestion des Transports"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <!-- Management Buttons -->
        <VBox spacing="15" alignment="CENTER">
            <Button fx:id="reservationManagementButton" text="Gestion des Réservations"
                    onAction="#handleReservationManagement"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #4CAF50;"/>
            <Button fx:id="ligneManagementButton" text="Gestion des Lignes"
                    onAction="#handleLigneManagement"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #9C27B0;"/>
            <Button fx:id="vehicleManagementButton" text="Gestion des Véhicules"
                    onAction="#handleVehicleManagement"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #F44336;"/>
            <Button fx:id="stationManagementButton" text="Gestion des Stations"
                    onAction="#handleStationManagement"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #2196F3;"/>
        </VBox>
    </children>
</VBox>