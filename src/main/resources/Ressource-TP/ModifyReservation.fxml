<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.example.demo.controllers.controllers_TP.ModifyReservationController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">

    <!-- Define padding using Insets -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <!-- Labels -->
        <Label text="Number of Seats:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label text="Total Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label text="Travel Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label text="Ticket Category:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label text="Vehicle:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label text="Departure Station:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label text="Arrival Station:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>

        <!-- Input Fields -->
        <TextField fx:id="numberOfSeatsField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <TextField fx:id="totalPriceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <DatePicker fx:id="travelDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <ChoiceBox fx:id="ticketCategoryChoice" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <ChoiceBox fx:id="statusChoice" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <ChoiceBox fx:id="vehicleChoice" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        <ChoiceBox fx:id="departStationChoice" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        <ChoiceBox fx:id="finStationChoice" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <!-- Buttons and Message -->
        <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="8" GridPane.columnIndex="1">
            <children>
                <Button fx:id="previousButton" text="Previous" onAction="#handlePrevious"/>
                <Button fx:id="modifyButton" text="Modify Reservation" onAction="#handleModifyReservation"/>
            </children>
        </HBox>
        <Label fx:id="messageLabel" visible="false" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    </children>
</GridPane>