<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controllers.controllers_TP.VehiculeManagementController"
      spacing="20" style="-fx-background-color: #ffffff; -fx-font-family: 'Segoe UI';">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Text text="Gestion des Véhicules" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addButton" text="Ajouter un Véhicule" onAction="#goToAddVehicule"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 10 20; -fx-background-radius: 8; -fx-font-weight: bold;"/>
    </HBox>
    <Button fx:id="previousButton" text="Précédent" onAction="#goBack"
            style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-padding: 12 25; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"
    />
    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="searchField" promptText="Rechercher un véhicule..." prefWidth="300"
                   style="-fx-background-radius: 20; -fx-padding: 8 15; -fx-border-color: #bdc3c7;
                          -fx-border-radius: 20; -fx-font-size: 14px;"
                   onKeyReleased="#filterVehicules"/>
        <Button text="🔍" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 20; -fx-padding: 8 15;" onAction="#filterVehicules"/>

    </HBox>

    <!-- Message -->
    <Label fx:id="messageLabel"  visible="false" style="-fx-font-size: 14px; -fx-padding: 5;"
           alignment="CENTER" VBox.vgrow="ALWAYS"/>

    <!-- Table -->
    <TableView fx:id="vehiculeTable" prefHeight="500" style="-fx-background-color: white;
           -fx-border-color: #ecf0f1; -fx-border-radius: 8; -fx-background-radius: 8;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="ligneColumn" text="Ligne" prefWidth="120"/>
            <TableColumn fx:id="vipMaxColumn" text="VIP Max" prefWidth="80"/>
            <TableColumn fx:id="premiumMaxColumn" text="Premium Max" prefWidth="100"/>
            <TableColumn fx:id="economyMaxColumn" text="Éco Max" prefWidth="80"/>
            <TableColumn fx:id="vipAvailableColumn" text="VIP Dispo" prefWidth="80"/>
            <TableColumn fx:id="premiumAvailableColumn" text="Premium Dispo" prefWidth="100"/>
            <TableColumn fx:id="economyAvailableColumn" text="Éco Dispo" prefWidth="80"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180"/>
        </columns>
    </TableView>

    <!-- Pagination -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="prevButton" text="Précédent" onAction="#previousPage"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;"/>
        <Label fx:id="pageLabel" text="Page 1" style="-fx-font-size: 14px;"/>
        <Button fx:id="nextButton" text="Suivant" onAction="#nextPage"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;"/>
    </HBox>
</VBox>