                    <HBox.margin>
                        <Insets top="9.0" />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/edit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Pane prefHeight="52.0" prefWidth="28.0" />
                <Button fx:id="btnSupprimerReservationTaxi" mnemonicParsing="false" onAction="#supprimerReservationTaxi" prefHeight="32.0" prefWidth="44.0" styleClass="btn-delete" stylesheets="@style.css">
                    <HBox.margin>
                        <Insets top="9.0" />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/delete.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
